<h1><%= name%> articulo</h1>
<%= form_for (@article) do |f| %>
<% @article.errors.full_messages.each do |msj| %>
    <div class="be-red white top-space">*<%= msj%></div>               
<% end %>
<div class= "field">
   <%= f.text_field :title, placeholder:"Titulo",class:"form-control" %>
</div>
<div class="field">
    <%= f.text_area :body,placeholder:"Escriba aqui su texto", style:"height:250px" ,class:"form-control" %>
</div>
<div class="field">
    <%= f.submit "Guardar",class:"btn be-red white large-padding"%>
</div>    
<% end %>